@model int
<div class="row">
    <a href="javascript:void(0)"
       class="btn btn-primary col-md-2 col-md-offset-5"
       id="add-comment" value="Add Comment">Добавить комментарий</a>
</div>
<br />
<div class="row">
    <div class="add-comment col-md-6 col-md-offset-3 hidden">
        <br />
        <div class="form-group">
            @using (Ajax.BeginForm("AddComment",
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId="comments"
                }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="sportCenterId" value="@Model"></input>
                <div class="row col-md-offset-2">
                    <br />
                    <div class="col-md-2">Содержание</div>
                    <textarea class="col-md-7" rows="4" cols="300" placeholder="Your text here..." name="content"></textarea>
                </div>
                    <br />
                    <div class="row">
                        <input type="submit" class="btn btn-primary center-block" />
                    </div>
            }
        </div>
        <br />
    </div>
    <br />
</div>