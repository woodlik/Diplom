@model string
<div class="row">
    <a href="javascript:void(0)"
       class="btn btn-primary col-md-2 col-md-offset-5"
       id="add-message" value="Add Message">Добавить сообщение</a>
</div>
<br />
<div class="row">
    <div class="add-message col-md-6 col-md-offset-3 hidden">
        <br />
        <div class="form-group">
            @using (Ajax.BeginForm("AddMessage",
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "messages"
                }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="recieverId" value="@Model"/>
                <div class="row col-md-offset-2">
                    <br />
                    <div class="col-md-2">Содержание</div>
                    <textarea class="col-md-7" rows="4" cols="300" placeholder="Твой текст здесь..." name="content"></textarea>
                </div>
                <br />
                    <div class="row">
                        <input type="submit" value="Send"   class="btn btn-primary center-block" />
                    </div>
            }
        </div>
        <br />
    </div>
    <br />
</div>